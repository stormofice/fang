{
  "manifest_version": 2,
  "name": "Werfer",
  "version": "0.1.0",
  "description": "Minimal link catcher with support for custom backends",
  "homepage_url": "https://github.com/stormofice/fang",
  "icons": {
    "64": "icons/ext.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/save.svg",
    "default_title": "Save",
    "default_area": "navbar",
    "default_popup": "popup/toolbar_popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "werfer@github.stormofice",
      "update_url": "https://raw.githubusercontent.com/stormofice/fang/refs/heads/main/werfer/update_manifest.json"
    }
  }
}
